<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.untitled.post.dao.PostDAO">
 	<select id="selectPostList" parameterType="map" resultType="com.untitled.post.model.Post">
 		SELECT
			`id` 
			,`userId`
			, `title`
			, `content`
			, `imagePath`
			, `price`
			, `viewCount`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		<if test='sort.equals("인기순")'>
		ORDER BY
			`viewCount`
		</if>
		<if test='sort.equals("최신순")'>
		ORDER BY
			`id` DESC;
		</if>
		
 	</select>
 </mapper>