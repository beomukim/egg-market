<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.untitled.post.dao.PostDAO">
 	<select id="selectPostList" parameterType="map" resultType="com.untitled.post.model.Post">
 		SELECT
			`id` 
			,`userId`
			, `title`
			, `content`
			, `imagePath`
			, `price`
			, `viewCount`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		<if test="sort == '인기순' or sort == null">
		ORDER BY
			`viewCount` DESC;	
		</if>
		<if test="sort == '최신순'">
		ORDER BY
			`id` DESC;
		</if>
		
 	</select>
 	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `title`
			, `content`
			, `imagePath`
			, `price`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{title}
			, #{content}
			, #{imagePath}
			, #{price}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectPost" resultType="com.untitled.post.model.Post">
		SELECT
			`id` 
			,`userId`
			, `title`
			, `content`
			, `imagePath`
			, `price`
			, `viewCount`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId};
	</select>
	
	<update id="setViewCount" parameterType="map">
		UPDATE
			`post`
		SET
			`viewCount` = #{viewCount}
		WHERE
			`id` = #{postId};
	</update>
	
	
 </mapper>